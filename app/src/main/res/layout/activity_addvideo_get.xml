<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wang.huntergod.AddvideoGetActivity"
    android:background="@drawable/loginpage"
    >


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50px"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="100px"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="得到日期："
        android:id="@+id/textView34"
        android:layout_alignTop="@+id/space12"
        android:layout_toRightOf="@+id/space12"
        android:layout_toEndOf="@+id/space12" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText10"
        android:layout_alignTop="@+id/space13"
        android:layout_toLeftOf="@+id/space13"
        android:layout_alignBottom="@+id/textView34"
        android:layout_toRightOf="@+id/textView34"
        android:layout_toEndOf="@+id/textView34" />

    <Space
        android:layout_width="100px"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space13" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="40px"
        android:id="@+id/imageView4"
        android:layout_below="@+id/textView34"
        android:layout_toRightOf="@+id/space12"
        android:layout_toEndOf="@+id/space12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="上傳照片："
        android:id="@+id/textView35"
        android:layout_below="@+id/imageView4"
        android:layout_toRightOf="@+id/space12"
        android:layout_toEndOf="@+id/space12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇"
        style="@style/RDButton"
        android:id="@+id/button21"
        android:layout_alignTop="@+id/textView35"
        android:layout_toRightOf="@+id/textView35"
        android:layout_toEndOf="@+id/textView35"
        android:onClick="loadImagefromGallery"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:id="@+id/imgView2"
        android:layout_below="@+id/button21"
        android:layout_toRightOf="@+id/space12"
        android:layout_alignRight="@+id/editText10"
        android:layout_alignEnd="@+id/editText10"
        android:alpha="100" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="送出"
        android:id="@+id/button10"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imgView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
