<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/RelativeLayout"
tools:context="com.example.wang.huntergod.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/cat_animation_view"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginBottom="7dp"
            android:src="@drawable/game_but1"
            android:id="@+id/brush_img_Button"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginBottom="7dp"
            android:src="@drawable/game_but2"
            android:id="@+id/poopoo_img_Button"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginBottom="7dp"
            android:src="@drawable/game_but3"
            android:id="@+id/eat_img_Button"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginBottom="7dp"
            android:src="@drawable/game_but4"
            android:id="@+id/play_img_Button"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_gravity="bottom" />

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:layout_marginBottom="7dp"
            android:src="@drawable/game_but5"
            android:id="@+id/bath_img_Button"
            android:scaleType="centerInside"
            android:background="@null"
            android:layout_gravity="bottom" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="60dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/poopoo"
            android:id="@+id/poo1" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="96dp"
            android:layout_marginLeft="150dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/poopoo"
            android:id="@+id/poo2" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="250dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/poopoo"
            android:id="@+id/poo3" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="300dp"
            android:background="@null"
            android:visibility="invisible"
            android:src="@drawable/poopoo"
            android:id="@+id/poo4" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="7dp"
            android:background="@null"
            android:src="@mipmap/grade_all"
            android:id="@+id/ShelterView" />



        <ImageView
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_marginTop="3dp"
            android:background="@null"
            android:id="@+id/test_imageView" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginTop="62dp"
            android:layout_marginLeft="70dp"
            android:textSize="55px"
            android:text="0"
            android:id="@+id/score_textView" />

    </LinearLayout>


</RelativeLayout>

